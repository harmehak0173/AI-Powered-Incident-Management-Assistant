# Environment Variables for AI Reliability Assistant
# Copy this file to .env and fill in your values

# OpenAI API Key (optional - for production LLM integration)
OPENAI_API_KEY=sk-your-api-key-here

# Anthropic API Key (optional - for Claude integration)  
ANTHROPIC_API_KEY=your-anthropic-key

# Vector Database (optional - for production)
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=incidents

# ChromaDB (optional)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
